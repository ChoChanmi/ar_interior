<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ui_1">
        </View>

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="25dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_icon"
            android:stateListAnimator="@null"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AIR APP"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사회초년생을 위한 인테리어 앱"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/nanumsquarerl"
            android:textStyle="bold"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="50dp"/>

        <LinearLayout
            android:id="@+id/Search_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView1"
            >

            <EditText
                android:id="@+id/Search"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login_text_background_selected"
                android:hint="  Search ..."
                android:fontFamily="@font/gmarketsanslight"
                android:paddingLeft="18dp"
                android:textColorHint="@color/darkgray"
                android:textSize="13dp" />

            <ImageButton
                android:id="@+id/searchFurniture"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_search_24" />
        </LinearLayout>

            <RelativeLayout
                android:id="@+id/interior_ar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="30dp">

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/ar_button1"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_margin="7dp"
                        android:background="@color/white"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="7dp">

                        <Button
                            android:id="@+id/ar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/baseline_home_24"
                            android:stateListAnimator="@null"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interior AR"
                            android:textColor="@color/black"
                            android:fontFamily="@font/gmarketsanslight"
                            android:layout_gravity="center"
                            android:layout_marginBottom="-40dp"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/ar_button2"
                    android:layout_below="@+id/ar_button1"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_margin="7dp"
                        android:background="@color/white"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="7dp">

                        <Button
                            android:id="@+id/ai"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/baseline_assessment_24"
                            android:stateListAnimator="@null"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI analysis"
                            android:textColor="@color/black"
                            android:fontFamily="@font/gmarketsanslight"
                            android:layout_gravity="center"
                            android:layout_marginBottom="-40dp"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/ar_button3"
                    android:layout_below="@+id/ar_button2"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_margin="7dp"
                        android:background="@color/white"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="7dp">

                        <Button
                            android:id="@+id/community"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/baseline_groups_24"
                            android:stateListAnimator="@null"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Community"
                            android:textColor="@color/black"
                            android:fontFamily="@font/gmarketsanslight"
                            android:layout_gravity="center"
                            android:layout_marginBottom="-40dp"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/ar_view1"
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="137dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="275dp"
                    android:background="@drawable/ui_2"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="| 증강현실을 활용한\n\n인테리어 시뮬레이션"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/nanumsquarerr"
                        android:textStyle="bold"
                        android:layout_marginTop="315dp"
                        android:layout_marginLeft="155dp"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <View
                    android:id="@+id/ar_view2"
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="137dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="430dp"
                    android:background="@drawable/ui_2"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="| AI 분석 기능을\n\n활용한 맞춤형 추천"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/nanumsquarerr"
                        android:textStyle="bold"
                        android:layout_marginTop="465dp"
                        android:layout_marginLeft="155dp"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/ar_view3"
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="137dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="585dp"
                    android:background="@drawable/ui_2"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="| 다른 사람과\n\n소통 가능한 게시판"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/nanumsquarerr"
                        android:textStyle="bold"
                        android:layout_marginTop="625dp"
                        android:layout_marginLeft="155dp"/>
                </LinearLayout>
            </FrameLayout>


        </RelativeLayout>
    </ScrollView>

</FrameLayout>